{
  "name": "mobo-ecosystem-pro",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "node -e \"console.log('Root Vite app has been archived. Run one of: npm run dev:backend | dev:buyer | dev:mediator | dev:agency | dev:brand | dev:admin')\"",
    "dev:all": "node scripts/dev-all.mjs",
    "dev:backend": "npm --prefix backend run dev",
    "dev:buyer": "npm --prefix apps/buyer-app run dev",
    "dev:mediator": "npm --prefix apps/mediator-app run dev",
    "dev:agency": "npm --prefix apps/agency-web run dev",
    "dev:brand": "npm --prefix apps/brand-web run dev",
    "dev:admin": "npm --prefix apps/admin-web run dev",
    "build": "node -e \"console.log('Build per-app: npm --prefix apps/<app> run build')\"",
    "preview": "node -e \"console.log('Preview per-app: npm --prefix apps/<app> run start')\"",
    "test": "npm run test:backend && npm run test:e2e",
    "test:backend": "npm -w @mobo/backend test",
    "test:e2e": "playwright test --pass-with-no-tests",
    "seed:large": "powershell -ExecutionPolicy Bypass -File scripts/seed-large.ps1",
    "ai:check": "powershell -ExecutionPolicy Bypass -File scripts/check-ai-key.ps1"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@playwright/test": "^1.57.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "lucide-react": "^0.556.0",
    "mongoose": "^9.0.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.10.1",
    "recharts": "^2.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.19.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.39.2",
    "mongodb-memory-server": "^11.0.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.52.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.16"
  }
}
