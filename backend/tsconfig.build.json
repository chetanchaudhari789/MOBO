{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "app.ts",
    "types/**/*.d.ts",
    "config/**/*.ts",
    "database/**/*.ts",
    "modules/**/*.ts",
    "services/**/*.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "validations/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": ["dist", "node_modules", "tests"]
}
