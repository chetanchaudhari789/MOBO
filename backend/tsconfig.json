{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "index.ts",
    "app.ts",
    "types/**/*.d.ts",
    "config/**/*.ts",
    "database/**/*.ts",
    "modules/**/*.ts",
    "services/**/*.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "validations/**/*.ts",
    "utils/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
